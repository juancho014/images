<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>{{image.title}}</h2>
        <a href="/image/delete/{{image._id}}"><button class="btn btn-danger" id="btn-delete" data-id="">
            <i class="fa fa-times"></i> Delete
        </button></a>
      
    </div>
    <div class="card-body">
        <p>{{image.description}}</p>
        <div class="text-center">
            <img src="/img/uploads/{{image.filename}}" class="img-fluid w-70 h-60" alt="{{image.title}}">
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <button class="btn btn-success" id="btn-like" data-id="">
            <i class="fas fa-thumbs-up"></i> Like
        </button>
        <p>
            <span class="likes-count"></span>
            <i class="fas fa-heart"></i>
        </p>
          <p>
           
            <i class="fas fa-eye"></i> 
        </p>
        <p>
            <i class="far fa-clock"></i>
          
        </p>
        
    </div>
</div>